@model UpcomingEvents.ViewModels.HomePageViewModel
@{ 
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome To My Events Page</h1>
</div>

<div>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
        view shopping cart <i class="glyphicon glyphicon-shopping-cart"></i>
        <span id="counter">@Model.ShoppingCart.Tickets.Count</span>
    </button>
</div>

<div class="row">
    @foreach (var evnt in Model.Events)
    {
        <div class="col-md-4">
            <div class="media">
                <div class="media-left">
                    <button class="btn btn-primary" onclick="addToCart(@evnt.id)">Add To Cart</button>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">@evnt.title</h4>
                    <p>
                        @evnt.Venue.name
                        at @evnt.starttime
                        <span class="label label-default"> @evnt.Genre.type</span>
                    </p>
                </div>
            </div>

        </div>

    }
</div>

